.btn
  border 1px solid silver
  border-radius .25rem
  display inline-block
  padding .7rem 1.5rem
  text-align center
  text-decoration none

.btn-primary
  color white
  background-color $price-blue

  &:active,
  &:hover
    background-color lighten($price-blue, 10%)

  &:disabled
    cursor not-allowed
    opacity .65

.btn-secondary
  background-color white

  &:active,
  &:hover
    background-color darken(white, 10%)

.btn-block
  display block
  width 100%