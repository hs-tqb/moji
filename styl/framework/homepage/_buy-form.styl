#buy
  background-color white
  border-radius .5rem .5rem 0 0
  margin 0 1rem 1.25rem
  position relative
  z-index 90

  h4
    font-weight normal
    margin 0 0 1em

    &.buy-info
      margin-bottom .5rem

    i
      background url(../img/sprites.png) no-repeat -4px 0
      background-size 68px
      display inline-block
      width 1.25rem
      height 1.25rem
      vertical-align bottom

      &.envelop
        background-position-y -18px

      &.cart
        background-position-y -38px

  .header-help
    display flex
    justify-content space-between

    .help
      display block
      border-radius 50%
      border 2px solid $yellow
      color $yellow
      font-size .8em
      font-weight bold
      text-align center
      text-decoration none
      width 20px
      height 20px
      line-height 16px
      margin-top 4px

  @import "_tqb-components.styl"
  @import "_radios.styl"
  @import "../../component/_inputs.styl"