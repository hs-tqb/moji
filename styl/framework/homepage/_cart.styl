footer.cart
  background-color white
  display flex
  font-size 1.25rem
  line-height 50px
  position fixed
  left 0
  right 0
  bottom 0
  z-index 100

  .total
    flex 1
    padding-left 2rem
    box-shadow inset 0 1px 0 #E6E6E6

  .price
    color $brand-color

  button
    width 150px
    height 50px
    background-color $brand-color
    border none
    border-radius 0
    padding 0