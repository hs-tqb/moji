html
  box-sizing border-box
  color #333
  font-size 14px
  touch-action manipulation
  -ms-touch-action manipulation

body
  font 1rem/1.5 -apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei",sans-serif
  font-weight 400
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-overflow-scrolling touch

*,
::before,
::after
  box-sizing inherit

.hide,
.stage
  display none

.stage
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color white
  overflow scroll
  z-index 1000
  flex-direction column

  &.animated
    display flex

.hidden
  visibility hidden